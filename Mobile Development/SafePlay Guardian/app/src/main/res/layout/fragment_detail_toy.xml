<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:maxWidth="330dp"
  android:orientation="vertical"
  tools:context=".ui.recomendation.DetailToyFragment">

  <ImageView
    android:id="@+id/toy_image_detail"
    android:layout_width="330dp"
    android:layout_height="330dp"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    app:srcCompat="@drawable/welcome_illustration"
    tools:srcCompat="@drawable/welcome_illustration" />

  <TextView
    android:id="@+id/tv_toy_name_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:text="@string/toys_name_example"
    android:textSize="16sp"
    android:textStyle="bold"
    tools:text="@string/toys_name_example" />

  <TextView
    android:id="@+id/tv_toy_desc_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:text="@string/toys_desc_example"
    android:textSize="16sp"
    tools:text="@string/toys_desc_example" />

</LinearLayout>