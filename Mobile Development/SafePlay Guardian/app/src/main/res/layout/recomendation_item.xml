<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/recomendation_toys"
  android:layout_width="match_parent"
  android:layout_marginBottom="16dp"
  style="@style/Widget.Material3.CardView.Elevated"
  android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/toy_image"
      android:layout_width="140dp"
      android:layout_height="140dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:scaleType="centerCrop"
      tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
      android:id="@+id/tv_toys_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:textSize="16dp"
      android:textStyle="bold"
      app:layout_constraintStart_toEndOf="@id/toy_image"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Nama mainan" />

    <TextView
      android:id="@+id/tv_toy_desc"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:maxLines="4"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/toy_image"
      app:layout_constraintTop_toBottomOf="@id/tv_toys_name"
      tools:text="Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old. " />

  </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>